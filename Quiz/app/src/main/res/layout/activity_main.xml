<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Викторина"
        android:textSize="28sp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите уровень сложности:"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnEasy"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Лёгкий"
        android:textSize="18sp"
        android:backgroundTint="#4CAF50"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnMedium"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Средний"
        android:textSize="18sp"
        android:backgroundTint="#FFC107"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnHard"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:text="Сложный"
        android:textSize="18sp"
        android:backgroundTint="#F44336"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Рекорды"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/easyHighScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/resetEasyHighScoreButton"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Сбросить рекорд (лёгкий)"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/mediumHighScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/resetMediumHighScoreButton"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Сбросить рекорд (средний)"
            android:backgroundTint="#FFC107"
            android:textColor="@color/black"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/hardHighScoreTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/resetHardHighScoreButton"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:backgroundTint="#F44336"
            android:text="Сбросить рекорд (сложный)"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <Button
        android:id="@+id/resetAllHighScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0000FF"
        android:text="Сбросить все рекорды"
        android:textColor="#FFFFFF" />
</LinearLayout>